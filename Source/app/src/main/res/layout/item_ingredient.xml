<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_padding"
        android:text="Ingredient Name" />

    <TextView
        android:id="@+id/ingredient_primary_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredient_name"
        android:layout_margin="@dimen/text_padding"
        android:text="Primary Tag" />

    <TextView
        android:id="@+id/ingredient_optional_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredient_primary_tag"
        android:layout_margin="@dimen/text_padding"
        android:text="Optional Tag" />
</RelativeLayout>