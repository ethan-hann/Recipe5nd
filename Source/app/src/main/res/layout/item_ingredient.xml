<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ingredient_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ingredient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_padding" />

    <TextView
        android:id="@+id/ingredient_primary_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredient_name"
        android:layout_margin="@dimen/text_padding" />

    <TextView
        android:id="@+id/ingredient_optional_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredient_primary_tag"
        android:layout_margin="@dimen/text_padding" />

    <View
        android:id="@+id/ingredient_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/ingredient_optional_tag"
        android:background="?android:attr/listDivider" />
</RelativeLayout>