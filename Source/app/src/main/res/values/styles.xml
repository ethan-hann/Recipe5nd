<resources>

    <!-- Base application theme. Used by application to apply overall styling -->
    <style name="Theme.Recipe5nd.Dark" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
    </style>

    <!-- Base theme with no action bar. Used by all Fragments. -->
    <style name="Theme.Recipe5nd.Dark.NoActionBar" parent="Theme.Recipe5nd.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
